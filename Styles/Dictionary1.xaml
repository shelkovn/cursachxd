<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="darkdark" Color="#1C056D"/>
    <SolidColorBrush x:Key="dark" Color="#604DA7"/>
    <SolidColorBrush x:Key="medium" Color="#8B7EC9"/>
    <SolidColorBrush x:Key="light" Color="#B9ADED"/>
    <SolidColorBrush x:Key="gray" Color="#D9D9D9"/>
    <SolidColorBrush x:Key="darkblue" Color="#0895ED"/>
    <SolidColorBrush x:Key="lightblue" Color="#D1F4F6"/>
    <SolidColorBrush x:Key="blue" Color="#08A8ED"/>

    <Style x:Key="base" TargetType="Control">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="/Source/alagard.ttf#Alagard-12px-unicode"/>
    </Style>

    <Style x:Key="importantbtn" TargetType="Button" BasedOn="{StaticResource base}">
        <Setter Property="Background" Value="{StaticResource lightblue}"/>
        <Setter Property="Foreground" Value="{StaticResource blue}"/>
        <Setter Property="BorderBrush" Value="{StaticResource blue}"/>
        <Setter Property="BorderThickness" Value="5"/>
    </Style>

    <Style x:Key="darkborder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource dark}"/>
        <Setter Property="BorderThickness" Value="8"/>
    </Style>

    <Style x:Key="inputtextbox" TargetType="TextBox"  BasedOn="{StaticResource base}">
        <Setter Property="Background" Value="{StaticResource gray}"/>
    </Style>
    
    <Style x:Key="textboxborder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource dark}"/>
        <Setter Property="BorderThickness" Value="3"/>
    </Style>
</ResourceDictionary>