<UserControl x:Class="micpix.View.UserControls.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:micpix.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="1000">
    <Grid>
        <DockPanel Grid.ColumnSpan="2"  Background="{StaticResource dark}">
            <Image Source="{Binding logosrc}" VerticalAlignment="Center" Margin="10"/>
            <Label Content="{Binding pagetitle}" VerticalAlignment="Center" Margin="5" Style="{StaticResource base}" FontSize="36" Foreground="{StaticResource lightblue}"/>
            <Label Content="{Binding logintext}" MouseLeftButtonUp="LoginClick" Margin="5" Style="{StaticResource base}" Foreground="{StaticResource darkblue}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</UserControl>
