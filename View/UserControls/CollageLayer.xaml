<UserControl x:Class="micpix.View.UserControls.CollageLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:micpix.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="350">
    <Grid  MinHeight="90" MinWidth="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="0.35*"/>
            <ColumnDefinition Width="0.35*"/>
        </Grid.ColumnDefinitions>
        <Label Style="{StaticResource base}" Content="{Binding layerindex}" FontSize="16" Foreground="{StaticResource dark}" VerticalAlignment="Center"/>
        <Image Grid.Column="1" gif:ImageBehavior.AnimatedSource="{Binding imgsrc}" Stretch="Uniform" MaxHeight="150"/>
        <Label Grid.Column="2" Style="{StaticResource base}" FontSize="16" Content="{Binding assetname}"/>
        <Slider Grid.Column="2" Background="{StaticResource light}" Margin="10" ValueChanged="SliderValueChanged" VerticalAlignment="Bottom" Minimum="0" Maximum="1" TickFrequency="0.01" TickPlacement="BottomRight" IsSnapToTickEnabled="True" Value="{Binding opacityvalue}"/>
        <Label Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource base}" FontSize="16" Content="opacity"/>
        <Label Grid.Column="3"  Foreground="{StaticResource blue}" FontSize="20" Content="++" MouseUp="DuplicateClick"/>
        <Label Grid.Column="3" VerticalAlignment="Bottom" Foreground="{StaticResource blue}" FontSize="20" Content="🗑️" MouseUp="DeleteClick"/>
        <Label Grid.Column="4" Foreground="{StaticResource blue}" FontSize="22" Content="◮" MouseUp="UpClick"/>
        <Label Grid.Column="4" VerticalAlignment="Bottom" Foreground="{StaticResource blue}" FontSize="22" Content="⧩" MouseUp="DownClick"/>
    </Grid>
</UserControl>
