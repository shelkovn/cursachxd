<Window x:Class="micpix.View.Windows.resourceuploadwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:micpix.View.Windows"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="resourceuploadwindow" Height="500" Width="500">
    <Grid Background="{StaticResource medium}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource textboxborder}" Grid.ColumnSpan="2" Margin="10">
            <TextBox x:Name="assetNameTextBox" Style="{StaticResource inputtextbox}" Text="assetname" Padding="15,0,0,0"/>
        </Border>

        <Border Grid.Row="1" Margin="10" Style="{StaticResource textboxborder}" Background="{StaticResource light}">
            <Canvas x:Name="imageCanvas" />
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Margin="0,30,10,50" Style="{StaticResource textboxborder}">
            <Grid Background="{StaticResource light}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource darkdark}" Content="Данные"/>
                <Label Grid.Row="1" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="формат:"/>
                <Label Grid.Row="2" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="размер:"/>
                <Label Grid.Row="3" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="вес:"/>
                <Label Grid.Row="4" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="кадры:"/>

                <Label x:Name="formatLabel"  Grid.Row="1" Grid.Column="1" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="-"/>
                <Label x:Name="dimensionsLabel" Grid.Row="2" Grid.Column="1" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="-"/>
                <Label x:Name="sizeLabel" Grid.Row="3" Grid.Column="1" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="-"/>
                <Label x:Name="lengthLabel" Grid.Row="4" Grid.Column="1" Style="{StaticResource base}" FontSize="14" Foreground="{StaticResource dark}" Content="-"/>
                <Menu Grid.Row="5" Grid.ColumnSpan="2" Background="{StaticResource light}" DockPanel.Dock="Right" Margin="5,0,5,0">
                    <MenuItem x:Name="cattree" Header="Категории" Style="{StaticResource base}" FontSize="14">
                        <TreeView FontSize="14" x:Name="categoryTree"/>
                    </MenuItem>
                </Menu>
                <WrapPanel Grid.Row="6" Grid.ColumnSpan="2" x:Name="tagspanel"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Margin="10" Style="{StaticResource textboxborder}">
            <Button x:Name="browseButton" Style="{StaticResource base}" Background="{StaticResource light}" Foreground="{StaticResource darkdark}" Content="📁 Выбрать..." Click="BrowseButton_Click"/>
        </Border>

        <Button x:Name="uploadButton" Grid.Row="2" Grid.Column="1" Margin="10" Style="{StaticResource importantbtn}" Content="Готово ✔" Click="UploadButton_Click"/>
    </Grid>
</Window>
