<Window x:Class="micpix.View.Windows.CollageMakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:micpix.View.UserControls"
        xmlns:local="clr-namespace:micpix.View.Windows"
        mc:Ignorable="d"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="CollageMakerWindow" Height="800" Width="1500">
    <Grid Background="{StaticResource medium}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.13*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.1*"/>
        </Grid.ColumnDefinitions>

        <uc:PageHeader Style="{StaticResource base}" Grid.ColumnSpan="3" logosrc="/Source/icon.png" pagetitle="MICPIX!!!!!!!!!!!!!" logintext="Вход/Регистрация"/>

        <Grid Grid.Row="1" Margin="5" Background="{StaticResource light}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.RowSpan="3" Style="{StaticResource darkborder}"/>
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource base}" Foreground="{StaticResource darkdark}" FontSize="20" Content="Последние загрузки" Margin="15"/>
                <Border DockPanel.Dock="Bottom" Style="{StaticResource textboxborder}" BorderThickness="2" Margin="10,0,10,5">
                    <TextBox x:Name="restextbox" Background="{StaticResource gray}" FontSize="16" Style="{StaticResource inputtextbox}" TextChanged="SearchAssets"/>
                </Border>
            </DockPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="assetspanel" DataContext="{Binding Resources}">
                    <!--<uc:MainpageElement Margin="15" imgsrc="/Source/3max.png" title="vash" author="rem" uploaddate="22 jul"/>-->
                </WrapPanel>
            </ScrollViewer>
            <Button Style="{StaticResource importantbtn}" Content="Загрузить элемент" FontSize="24" Margin="20" Grid.Row="2" Click="Uploader_Window_Click"/>
        </Grid>
        
        <Border BorderBrush="{StaticResource darkdark}" BorderThickness="7" Grid.Row="1" Grid.Column="1" Margin="5">
            <Canvas Background="{StaticResource gray}" >

            </Canvas>
        </Border>

        <Border BorderBrush="{StaticResource dark}" BorderThickness="7" Grid.Row="1" Grid.Column="2" Margin="5">
            <Grid Background="{StaticResource light}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Style="{StaticResource base}" FontSize="16" Content="Элемент:"/>
                <Label Style="{StaticResource base}" Foreground="{StaticResource blue}" FontSize="18" Content="элемент не выбран" Grid.Column="1" Grid.ColumnSpan="3"/>
                <Image Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" gif:ImageBehavior.AnimatedSource="/Source/icon.png" Stretch="Uniform"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="3" Content="x:"/>
                <Label Background="{StaticResource gray}" FontSize="18" Grid.Row="3" Margin="25,0,3,3"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Column="1" Grid.Row="3" Content="y:"/>
                <Label Background="{StaticResource gray}" FontSize="18" Grid.Column="1" Grid.Row="3" Margin="25,3,3,3"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="1" Grid.Column="2" Content="width:"/>
                <Label Background="{StaticResource gray}" FontSize="18" Grid.Row="1" Grid.Column="3" Margin="5"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="2" Grid.Column="2" Content="height:"/>
                <Label Background="{StaticResource gray}" FontSize="18" Grid.Row="2" Grid.Column="3" Margin="5"/>

                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="3" Grid.Column="2" Content="rotation:"/>
                <Label Background="{StaticResource gray}" FontSize="18" Grid.Row="3" Grid.Column="3" Margin="5"/>

                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="4" Grid.Column="2" Content="opacity:"/>
                <Label Background="{StaticResource gray}" FontSize="18" Grid.Row="4" Grid.Column="3" Margin="5"/>

                <Border Grid.Row="5" Grid.ColumnSpan="4" Margin="10" BorderThickness="3" BorderBrush="{StaticResource dark}" Background="{StaticResource gray}">
                    <StackPanel Orientation="Vertical">
                        <Label Style="{StaticResource base}" Foreground="{StaticResource dark}" FontSize="20" Content="Слои"/>
                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <StackPanel x:Name="layerspanel" Orientation="Vertical">
                                <uc:CollageLayer imgsrc="/Source/3max.png" assetname="testname" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                    
                </Border>
                
            </Grid>
        </Border>
        
    </Grid>
</Window>
