<Window x:Class="micpix.View.Windows.CollageMakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:micpix.View.UserControls"
        xmlns:local="clr-namespace:micpix.View.Windows"
        mc:Ignorable="d"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="CollageMakerWindow" Height="800" Width="1500">
    <Grid Background="{StaticResource medium}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.13*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.1*"/>
        </Grid.ColumnDefinitions>

        <uc:PageHeader x:Name="pageheader" Style="{StaticResource base}" Grid.ColumnSpan="3" logosrc="/Source/icon.png" pagetitle="MICPIX!!!!!!!!!!!!!" logintext="Профиль"/>

        <Border Grid.Row="1" Margin="5" Style="{StaticResource darkborder}">
            <Grid Background="{StaticResource light}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBox x:Name="collagenametb" Style="{StaticResource inputtextbox}" Margin="3" FontSize="18" Text="CollageName" Foreground="{StaticResource blue}"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label Style="{StaticResource base}" FontSize="16" Content="width:"/>
                    <TextBox x:Name="collagewidth" Style="{StaticResource inputtextbox}" Margin="3" FontSize="16" MinWidth="50"/>
                    <Label Style="{StaticResource base}" FontSize="16" Content="height:"/>
                    <TextBox x:Name="collageheight" Style="{StaticResource inputtextbox}" Margin="3" FontSize="16" MinWidth="50"/>
                </StackPanel>
                <Button Style="{StaticResource importantbtn}" Content="Сохранить" FontSize="14" MaxWidth="100" Grid.Column="1" Margin="0,3,3,0" Click="SaveResultButton"/>
                <Button Style="{StaticResource importantbtn}" Content="Экспорт" FontSize="14" MaxWidth="100" Grid.Row="1" Grid.Column="1" Margin="0,3,3,3"/>
                <ProgressBar Grid.ColumnSpan="2" Grid.Row="2" x:Name="LoadingProgressBar" Height="20" Margin="5,2" Minimum="0" Maximum="100" Visibility="Collapsed"/>
                <Label Grid.ColumnSpan="2" Grid.Row="2" Style="{StaticResource base}" x:Name="StatusText" FontSize="14" Content="Ready" HorizontalAlignment="Center" Margin="5"/>
            </Grid>
        </Border>    

        <Grid Grid.Row="2" Margin="5" Background="{StaticResource light}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*"/>
                <RowDefinition/>
                <RowDefinition Height="0.25*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.RowSpan="3" Style="{StaticResource darkborder}"/>
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource base}" Foreground="{StaticResource darkdark}" FontSize="20" Content="Последние загрузки" Margin="15"/>
                <Border DockPanel.Dock="Bottom" Style="{StaticResource textboxborder}" BorderThickness="2" Margin="10,0,10,5">
                    <TextBox x:Name="restextbox" Background="{StaticResource gray}" FontSize="16" Style="{StaticResource inputtextbox}" TextChanged="SearchAssets"/>
                </Border>
            </DockPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="assetspanel" DataContext="{Binding Resources}">
                    <!--<uc:MainpageElement Margin="15" imgsrc="/Source/3max.png" title="vash" author="rem" uploaddate="22 jul"/>-->
                </WrapPanel>
            </ScrollViewer>
            <Button Style="{StaticResource importantbtn}" Content="Загрузить элемент" FontSize="24" Margin="20" Grid.Row="2" Click="Uploader_Window_Click"/>
        </Grid>
        
        <Border BorderBrush="{StaticResource darkdark}" BorderThickness="7" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Margin="5">
            <Canvas x:Name="collagecanvas" Background="{StaticResource gray}" SizeChanged="collagecanvas_SizeChanged">

            </Canvas>
        </Border>

        <Border BorderBrush="{StaticResource dark}" BorderThickness="7" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Margin="5">
            <Grid Background="{StaticResource light}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition Height="0.1*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Style="{StaticResource base}" FontSize="16" Content="Элемент:"/>
                <Label x:Name="targetname" Style="{StaticResource base}" Foreground="{StaticResource blue}" FontSize="18" Content="элемент не выбран" Grid.Column="1" Grid.ColumnSpan="3"/>
                <Image x:Name="targetimg" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" gif:ImageBehavior.AnimatedSource="/Source/icon.png" Stretch="Uniform"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="3" Content="x:"/>
                <TextBox x:Name="targetx" Background="{StaticResource gray}" FontSize="18" Grid.Row="3" Margin="25,0,3,3"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Column="1" Grid.Row="3" Content="y:"/>
                <TextBox x:Name="targety" Background="{StaticResource gray}" FontSize="18" Grid.Column="1" Grid.Row="3" Margin="25,3,3,3"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="1" Grid.Column="2" Content="scale x:"/>
                <TextBox x:Name="targetwidth" Background="{StaticResource gray}" FontSize="18" Grid.Row="1" Grid.Column="3" Margin="5"/>
                
                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="2" Grid.Column="2" Content="scale y:"/>
                <TextBox x:Name="targetheight" Background="{StaticResource gray}" FontSize="18" Grid.Row="2" Grid.Column="3" Margin="5"/>

                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="3" Grid.Column="2" Content="rotation:"/>
                <TextBox x:Name="targetrot" Background="{StaticResource gray}" FontSize="18" Grid.Row="3" Grid.Column="3" Margin="5"/>

                <Label Style="{StaticResource base}" FontSize="16" Grid.Row="4" Grid.Column="2" Content="opacity:"/>
                <TextBox x:Name="targetopacity" Background="{StaticResource gray}" FontSize="18" Grid.Row="4" Grid.Column="3" Margin="5"/>

                <Border Grid.Row="5" Grid.ColumnSpan="4" Margin="10" BorderThickness="3" BorderBrush="{StaticResource dark}" Background="{StaticResource gray}">
                    <DockPanel>
                        <Label DockPanel.Dock="Top" Style="{StaticResource base}" Foreground="{StaticResource dark}" FontSize="20" Content="Слои"/>
                        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Hidden">
                        <DockPanel x:Name="layerspanel">
                            <!--<uc:CollageLayer imgsrc="/Source/3max.png" assetname="testname" HorizontalAlignment="Stretch"/>-->
                        </DockPanel>
                    </ScrollViewer>
                    </DockPanel>
                        

                </Border>
                
            </Grid>
        </Border>
        
    </Grid>
</Window>
