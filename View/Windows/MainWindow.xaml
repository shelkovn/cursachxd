<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:micpix.View.UserControls"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1500">
    <Grid Background="{StaticResource medium}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.13*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--<DockPanel Grid.ColumnSpan="2"  Background="{StaticResource dark}">
            <Image Source="/Source/icon.png" VerticalAlignment="Center" Margin="10"/>
            <Label Content="MICPIX!!!!!!!!!!!!!" VerticalAlignment="Center" Margin="10" Style="{StaticResource base}" FontSize="48" Foreground="{StaticResource lightblue}"/>
            <Label Content="Вход/Регистрация" Margin="10" Style="{StaticResource base}" Foreground="{StaticResource darkblue}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </DockPanel>   -->
        <uc:PageHeader Style="{StaticResource base}" Grid.ColumnSpan="2" logosrc="/Source/icon.png" pagetitle="MICPIX!!!!!!!!!!!!!" logintext="Вход/Регистрация"/>

        <Grid Grid.Row="1" Margin="80,30,30,30" Background="{StaticResource light}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="3" Style="{StaticResource darkborder}"/>
            <DockPanel>
                <Label Style="{StaticResource base}" Foreground="{StaticResource darkdark}" FontSize="24" Content="Недавние работы" Margin="15"/>
            </DockPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <WrapPanel>
                    <ContentControl/>
                </WrapPanel>
            </ScrollViewer>
            <Button Style="{StaticResource importantbtn}" Content="Создать работу" FontSize="24" Margin="20" Grid.Row="2" Click="CollageMaker_Window_Click"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Margin="30,30,80,30" Background="{StaticResource light}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="3" Style="{StaticResource darkborder}"/>
            <DockPanel>
                <Label DockPanel.Dock="Top" Style="{StaticResource base}" Foreground="{StaticResource darkdark}" FontSize="24" Content="Последние загрузки" Margin="15"/>
                <Label Content="Сортировать по:" FontSize="16" Foreground="{StaticResource dark}" Style="{StaticResource base}" Margin="5,0,0,0"/>
                <CheckBox x:Name="resdatesort" Checked="SortByDate" FontSize="16" Foreground="{StaticResource dark}" Style="{StaticResource base}" Content="Дата"/>
                <CheckBox x:Name="resnamesort" Checked="SortByName" FontSize="16" Foreground="{StaticResource dark}" Style="{StaticResource base}" Content="Название"/>
                
                <Border DockPanel.Dock="Bottom" Style="{StaticResource textboxborder}" BorderThickness="2" Margin="10,0,15,0">
                    <TextBox x:Name="restextbox" Background="{StaticResource gray}" FontSize="16" Style="{StaticResource inputtextbox}" TextChanged="SearchAssets"/>
                </Border>
            </DockPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="assetspanel" DataContext="{Binding Resources}">
                    <!--<uc:MainpageElement Margin="15" imgsrc="/Source/3max.png" title="vash" author="rem" uploaddate="22 jul"/>-->
                </WrapPanel>
            </ScrollViewer>
            <Button Style="{StaticResource importantbtn}" Content="Загрузить элемент" FontSize="24" Margin="20" Grid.Row="2" Click="Uploader_Window_Click"/>
        </Grid>

    </Grid>
</Window>
